@model List<FinalProject1_Web.Models.Item>
@using FinalProject1_Web.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">제품목록</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">제품목록</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div>
        <div>
            @{
                List<Item> items = Model;
                int columnCnt = 3;
                int RowCnt = (int)Math.Ceiling(items.Count / 3.0);
                int columnDist = 70;
                int RowDist = 30;
                int idx = 0;
            }

            @for (int r = 0; r < RowCnt; r++)
            {
                for (int c = 0; c < columnCnt; c++)
                {
                    <div class="card">
                        <h5 class="card-header">@items[idx].Item_Name</h5>
                        @using (Html.BeginForm("AddToCart", "Cart"))
                        {
                            <div class="card-body">
                                @*<p class="card-text">@p.Description &nbsp;</p>*@  <!--  -->
                                <h5 class="card-title">@items[idx].Item_Category</h5>
                                <div class="text-right">
                                    @Html.Hidden("itemId", items[idx].ItemID)
                                    <input type="submit" value="Add to Cart" class="btn btn-success">
                                </div>
                            </div>
                        }
                    </div>
                    idx++;
                    if (idx >= items.Count)
                    {
                        break;

                    }
                }
            }


            @*<nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @Html.PageLinks(Model.PageInfo, (x) => Url.Action("Index", new { category = Model.CurrentCategory, page = x }))
            </ul>
        </nav>*@
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content -->
