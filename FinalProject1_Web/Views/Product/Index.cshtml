@model List<ItemVO>
@using FinalProject1_VO;



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="border-dark">제품목록</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">제품목록</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div>
        <div>
            @{
                List<ItemVO> items = Model;
            }

            
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var p in items)
                { 
                    <div class="col">
                        <div class="card h-100">
                            <h4 class="card-header">@p.Item_Code-@p.Item_Name</h4>
                            <img src="@ViewBag.apiurl@p.Item_img" class="card-img-top" alt="..." width="250" height="250">
                            <div class="card-body">
                                <p class="card-text">@p.Item_Content</p>
                                <h5 class="card-text" style="float:right">30000</h5>
                            </div>
                            @using (Html.BeginForm("AddToCart", "Cart"))
                            {
                                @Html.Hidden("productID", p.Item_ID)
                                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                                <input type="submit" value="장바구니" class="btn btn-success" style="float:right">
                            }
                            <div class="card-footer">
                                <small class="text-muted">Last updated 3 mins ago</small>
                            </div>
                        </div>
                    </div>
                }
            </div>



