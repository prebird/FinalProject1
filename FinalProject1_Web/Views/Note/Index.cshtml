@model FinalProject1_Web.Models.NoteListViewModel

@using FinalProject1_Web.Html;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}



<div class="content-wrapper">
    <div class="container">
        <div class="login-logo fa-pull-left">
            <a href="#"><b>Notice</b></a>
        </div>
        <table class="table table-striped">
            <tr>
                <th>번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>날짜</th>
                <th>조회수</th>
                <th></th>

            </tr>

            @foreach (var item in Model.Notes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.note_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.note_subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.note_userid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.note_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.note_readCount)
                    </td>
                    <td>
                        @Html.ActionLink("보기", "Details", new { id = item.note_id }) |
                        @Html.ActionLink("수정", "Edit", new { id = item.note_id }) |
                        @Html.ActionLink("삭제", "Delete", new { id = item.note_id })
                    </td>
                </tr>
            }

        </table>

        <a class="btn btn-success fa-pull-right" style="color:white" onclick="location.href='/Note/Create'">글쓰기</a>


        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @Html.PageLinks(Model.PageInfo, (x) => Url.Action("Index", new { page = x }))
            </ul>
        </nav>

    </div>

    <script language="javascript" type="text/javascript">

        function onCHK_ID_Window() {

            url = "/Note/Delete"

            targetName = "popup"

            window.open(url, targetName, "height=250,width=300,status=yes,toolbar=no,menubar=no,location=no");

        }

    </script>

</div>

