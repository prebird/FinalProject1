@model FinalProject1_VO.NoteVO
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="well well-sm">
                    <form class="form-horizontal" method="post">
                        <fieldset>

                            <div class="login-logo fa-pull-left">
                                <a href="#"><b>Notice</b>Edit</a>
                            </div>

                            <div class="form-group">
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.note_subject, new { htmlAttributes = new { @class = "form-control", placeholder = "제목" } })
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.note_userid, new { rows = 15, htmlAttributes = new { @class = "form-control", placeholder = "작성자" } })
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-9">
                                    @Html.TextAreaFor(m => m.note_contents, new { @class = "form-control", rows = 15 })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-primary btn-lg fa-pull-left">글 수정</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
